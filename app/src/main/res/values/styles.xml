    <style name="AppTheme.NoActionBar.ApplicationStyle">
        <item name="android:buttonStyle">?attr/borderlessButtonStyle</item>
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme" />


    <style name="closeButtonStyle" parent="clickableBorderlessBackground">
        <item name="android:padding">16dp</item>
    </style>

    <style name="clickableBorderlessBackground">
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

